                    <li class="nav-item scroll-to-section">
                        <form class="nav-link js-scroll-trigger" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                    @* @userManager.GetUserName(User)*@
                            <button type="submit" class="btn btn-link nanum-bold"> @userManager.GetUserName(User)</button>
                        </form>
                    </li>
                        }
                        else
                        {
                            <li class=" nav-item scroll-to-section">
                            <a class="nav-link js-scroll-trigger" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class=" nav-item scroll-to-section">
                                <a class="nav-link js-scroll-trigger" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
